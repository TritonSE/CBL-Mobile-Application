import 'package:firebase_core/firebase_core.dart';
import 'package:cloud_firestore/cloud_firestore.dart';

class User {
  final String title;
  final double time;
  final double duration;
  final String address;
  final String description;

  User({this.EventTitle, this.Time, this.Duration, this.Address, this.Description,});
  Map<String, dynamic> toMap() {
    return {
      'EventTitle': title,
      'Time': time,
      'Duration': duration,
      'Address': address,
      'Description': description,

    };
  }
}

class TestimonialSubmitter {
  static final FirebaseFirestore _db = FirebaseFirestore.instance;
  static Future<Map<String, String>> submitTestimonial(Map<String, dynamic> testimonialData) async {
    try {
      final CollectionReference userCollection = FirebaseFirestore.instance.collection('/users');
      Future<void> addUser(User user) async {
        return await userCollection.add(user.toMap());
      }
      return {'status': 'OK'};
    } catch (e) {
      return {'status': 'ERROR', 'message': e.toString()};
    }
  }
}

